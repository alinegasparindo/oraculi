

<div class="container">
  <h1 class="text-center">Here are all your meetings</h1>

  <div class="meetings">

    <div class="mentee">
        <h2>As a mentee</h2>
            <% @user.mentee_meetings.each do |meeting| %>
            <% if meeting.accepted == false %>
              <div class="notification">

                 <%= cl_image_tag meeting.mentor.photo.key, class: "avatar-large" %>
                <div class="notification-content">
                  <p><small><%= meeting.start_time %></small></p>
                  <p><small><%= meeting.location %></small></p>
                  <p>With <%= meeting.mentor.name %></p>
                </div>

                <div class="notification-actions">
                  <p class=""><%= link_to "ðŸ—‘ Cancel", meeting_path(meeting), method: :delete %></p>
                </div>
              </div>
            <% end %>
          <% end %>
          <% @user.mentee_meetings.each do |meeting| %>
